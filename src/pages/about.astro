---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import AboutInformation from '../components/AboutInformation';
---

<Layout title="Would you still love me if I was a worm?">
	<main>
		 <div id="main-box">
            <AboutInformation client:load/>
		</div>
        <Footer/>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		/* color: white; */
		font-size: 20px;
		line-height: 1.6;
		height: 100%;
		width: 100%;
	}
	body {
		height: 100vh;
		width: 100vw;
	}
	#main-box{
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
        width: 100%;
	}
</style>
